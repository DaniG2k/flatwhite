<%= title(@post.title) %>
<p id="notice"><%= notice %></p>

<div class="row">
	<div class="span12">
		<h2><%= @post.title %> <small>(<%= @post.created_at.strftime('%A %B %e, %Y') %>)</small></h2>
	</div>
</div>
<div class="row">
	<div class="span12">
		<%= raw @post.body %>
	</div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

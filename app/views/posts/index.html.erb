<h1>Listing Posts</h1>

<% @posts.each do |post| %>
  <div class="row">
    <div class="span12">
      <h2><%= link_to post.title, post_path(post) %> <small>(<%= post.created_at.strftime('%A %B %e, %Y') %>)</small></h2>
    </div>
  </div>
  <div class="row">
    <div class="span12"><%= preview(post) %></div>
  </div>
  <% if user_signed_in? %>
    <div class="row">
      <div class="span3"><%= link_to 'Edit', edit_post_path(post) %></div>
      <div class="span3"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure you would like to delete this blog post?' } %></div>
      <div class="span3"></div>
      <div class="span3"></div>
    </div>
  <% end %>
<% end %>